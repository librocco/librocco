{
	"compilerOptions": {
		"moduleResolution": "bundler",
		"paths": {
			"@/*": ["src/*"],
			"@test-runner/*": ["src/test-runner/*"],
			"@data-loaders/*": ["src/data-loaders/*"],
			"@unit-test-data/*": ["src/test-runner/__testData__/*"]
		},
		"rootDir": "src",
		"baseUrl": ".",
		"target": "ESNext",

		"lib": ["ESNext"],
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules"],
	"include": ["src"]
}
