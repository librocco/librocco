{
	"name": "@librocco/e2e",
	"version": "0.0.1",
	"scripts": {
		"build": "echo e2e has no build functionality, skipping...",
		"test:open": "playwright test --ui",
		"test:debug": "playwright test $1 --debug",
		"test:run": "playwright test",
		"test:codegen": "playwright codegen",
		"test:ci": "(cd ../web-client && rushx preview) & PREVIEW_PID=$!; CI=true playwright test --reporter=line; RESULT=$?; kill $PREVIEW_PID; exit $RESULT",
		"typecheck": "tsc",
		"lint": "prettier --check . && eslint .",
		"lint:strict": "prettier --check . && eslint . --max-warnings=0",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@librocco/db": "workspace:*",
		"@librocco/shared": "workspace:*",
		"@playwright/test": "~1.47.1",
		"@typescript-eslint/eslint-plugin": "~6.19.1",
		"@typescript-eslint/parser": "~6.19.1",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.6.0",
		"prettier": "^3.3.3",
		"typescript": "^5.3.3",
		"@types/node": "~20.4.1",
		"@internationalized/date": "~3.5.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "~0.6.8"
	},
	"type": "module"
}
