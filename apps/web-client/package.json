{
	"name": "@librocco/web-client",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"start:server": "npx tsx src/sync_server/index.ts",
		"start": "VITE_GIT_SHA=$(git rev-parse --short HEAD) vite dev",
		"start:e2e": "echo \"Starting dev server for e2e purposes...\" && PUBLIC_IS_E2E=true vite dev",
		"build": "echo \"Skipping web app build as part of rush's bulk 'build' script. To build the app for production run: 'rushx build:prod'\"",
		"build:prod": "VITE_GIT_SHA=$(git rev-parse --short HEAD) vite build",
		"build:e2e": "VITE_GIT_SHA=$(git rev-parse --short HEAD) PUBLIC_IS_E2E=true vite build",
		"format": "prettier --write .",
		"postinstall": "svelte-kit sync",
		"lint": "prettier --check . && eslint .",
		"lint:strict": "prettier --check . && eslint . --max-warnings=0",
		"preview": "vite preview",
		"story:build": "storybook build",
		"story:dev": "storybook dev",
		"story:preview": "storybook preview",
		"test": "vitest --ui",
		"test:ci": "npx playwright install --with-deps && vitest --",
		"typecheck": "svelte-check --tsconfig ./tsconfig.json --threshold error",
		"typesafe-i18n": "typesafe-i18n",
		"typesafe-i18n-check": "typesafe-i18n --no-watch && git diff --quiet || (echo 'Error: Changes detected in i18n files. Please commit the changes.' && exit 1)"
	},
